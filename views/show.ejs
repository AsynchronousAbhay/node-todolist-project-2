<%- include('header')%>
  <%- include('nav')%>

    <ol class="list-group list-group-numbered container mt-5">

      <% if(tasks.length === 0){%>
          <h2 class="text-success text-center">no reamaning task....</h2>
      <% }%>

      <% tasks.forEach( (task)=>{%>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <div class="fw-bold fs-5"><%= task.title%></div>
            <%= task.desc%><span class="text-danger">| <%= task.deadline%></span>
          </div>
          <span class="badge rounded-pill"><a href="/edit/<%= task.id%>">🖋</a></span>
          <span class="badge rounded-pill"><a href="/delete/<%= task.id%>">❌</a></span>
        </li>
        <%})%>

    </ol>



    <%- include('footer')%>